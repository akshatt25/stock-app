<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LoginActivity">
    
    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        >
    </ImageView>

    <TextView
        android:id="@+id/letsSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="125dp"
        android:text="Let's Sign you in."
        android:textSize="30sp"
        android:fontFamily="@font/sf"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        ></TextView>

    <TextView
        android:id="@+id/welcomeBackText"
        android:layout_below="@id/letsSign"
        android:layout_marginTop="10dp"
        android:layout_marginStart="22dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back \nYou've been missed!"
        android:textColor="#8A8A8A"
        android:textSize="25sp"
        android:fontFamily="@font/sf"
        android:textStyle="bold"
        ></TextView>


    <TextView
        android:id="@+id/mobNo"
        android:layout_below="@id/welcomeBackText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Mobile No."
        android:fontFamily="@font/sf"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="75dp"
        android:textSize="15sp"
        ></TextView>

    <EditText
        android:id="@+id/mobNoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Mobile Number"
        android:layout_below="@id/mobNo"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="15dp"
        android:layout_marginTop="5dp"
        android:textColor="#8A8A8A"
        android:background="@drawable/round2"
        >
    </EditText>

    <TextView
        android:id="@+id/pw"
        android:layout_below="@id/mobNoBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Password"
        android:fontFamily="@font/sf"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        ></TextView>

    <EditText
        android:id="@+id/mpwBoxx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_below="@id/pw"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:paddingStart="15dp"
        android:layout_marginTop="5dp"
        android:textColor="#8A8A8A"
        android:background="@drawable/round2"
        >
    </EditText>
   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_above="@id/login2"
       android:gravity="center"
       android:layout_marginBottom="5dp"
       >
       <TextView
           android:fontFamily="sans-serif-medium"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Don't have an account?"
           android:textColor="#8A8A8A"
           >
       </TextView>
       <TextView
           android:id="@+id/registerLink"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="  Register"
           android:fontFamily="sans-serif-medium"
           android:textColor="@color/blue"
           >
       </TextView>

   </LinearLayout>
    <TextView
        android:id="@+id/login2"
        android:text="Login"
        android:gravity="center"
        android:background="@drawable/round"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textSize="20sp"
        android:layout_marginBottom="75dp"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:foregroundGravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content">
    </TextView>



</RelativeLayout>